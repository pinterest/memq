		<artifactId>memq-parent</artifactId>
		<version>1.0.0</version>
		<relativePath>../pom.xml</relativePath>
	</parent>
	<artifactId>memq</artifactId>
	<name>memq</name>
	<description>A hyperscale PubSub System</description>
	<properties>
		<dropwizard.version>1.3.27</dropwizard.version>
		<jackson.version>2.12.7.1</jackson.version>
		<atomix.version>3.1.8</atomix.version>
